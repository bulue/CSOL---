<Window x:Class="PwcTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PwcTool" Height="458" Width="736">
    <Grid>
        <Button Content="开始" Height="23" HorizontalAlignment="Left" Margin="418,16,0,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <DataGrid AutoGenerateColumns="True" Height="356" HorizontalAlignment="Left" Margin="0,63,0,0" Name="statusGrid" VerticalAlignment="Top" Width="675" DragEnter="statusGrid_DragEnter" Drop="statusGrid_Drop" AllowDrop="True" />
        <TextBox Height="23" HorizontalAlignment="Right" Margin="0,16,339,0" Name="FixPwdTextbox" VerticalAlignment="Top" Width="120" KeyDown="OnFixPwdKeyDownHandler"/>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="201,19,0,0" Name="textBlock1" Text="固定密码" VerticalAlignment="Top" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,19,0,0" Name="textBlock2" Text="随机密码" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="66,16,0,0" Name="RandomPwdTextbox" VerticalAlignment="Top" Width="120" KeyDown="OnRandomPwdKeyDownHandler" Text="a-zA-Z" />
        <Button Content="停止" Height="23" HorizontalAlignment="Right" Margin="0,16,125,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
    </Grid>
</Window>
